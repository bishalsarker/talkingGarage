
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Billing | Talking Garage</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="@Url.Action("Map", "Home")">
            <img src="../images/logo.png" alt="Logo" style="width:230px; height:30px">        
        </a>

        <!-- Links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Map", "Home")">Maps</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Logout", "Home")">Logout</a>
            </li>
        </ul>
    </nav>
    <br />
    <div class="container-fluid">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Billing & Payments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Account Settings</a>
            </li>
        </ul>
        <br />
        <h1>Billing & Payments</h1>
        <div class="row">
            <div class="col-6" style="padding: 10px;">
                <div style ="background-color: #f5f1f1; padding: 10px;">
                    <h4>Total Payable: @ViewBag.TotalPayable Tk</h4>
                    <br />
                    <h5>Due Date: @ViewBag.DueDate</h5>
                    <p>[Your account will be freezed if you are unable to pay your bills within due date]</p>
                    <br />
                </div>
            </div>
            <div class="col-6" style="padding: 10px;">
                <div style="background-color: #f5f1f1; padding: 10px;">
                    <h4>Payment: </h4>
                    <p>Pay your bills with bKash payment gateway.</p>
                    <a href="@Url.Action("Payments", "Billing")" class="btn btn-dark">Pay now</a>
                </div>
            </div>
        </div>

        <br />
        <h3>Transactions</h3>
        <div class="row">
            <div class="col-12" style="padding: 10px;">
                <div style="padding: 10px;">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Lot Name</th>
                                    <th>Billed Date</th>
                                    <th>Hourly Rate</th>
                                    <th>Duration</th>
                                    <th>Total Charge</th>
                                    <th>Payment Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.Raw(ViewBag.Transactions)
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
