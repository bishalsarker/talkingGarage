
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Talking Garage | An smart IoT Parking Solution</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="~/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/js/camera.min.js"></script>
    <script type="text/javascript">
        jQuery(function () {
            jQuery('#camera_wrap_1').camera({
                height: '500px',
                pagination: false,
            });
        });
    </script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1200);
            });
        });
    </script>
</head>

<body>
    <div class="header" id="top">
        <div class="wrap">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")"><img src="~/images/logo.png" title="logo" /></a>
            </div>
            
            <div class="top-nav">
                <ul>
                    <li><a href="@Url.Action("Login", "Home")">Sign in</a></li>
                    <li><a href="#">Register</a></li>
                    <li><a href="#">Add My Garage</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Home")">About</a></li>
                </ul>
            </div>
            <div class="clear"> </div>          
        </div>
    </div>
    <div class="slider">
        <div class="camera_wrap camera_azure_skin" id="camera_wrap_1">
            <div data-src="../images/1.jpg"> </div>
            <div data-src="../images/2.jpg"> </div>
            <div data-src="../images/3.jpg"> </div>
            <div data-src="../images/4.jpg"> </div>
        </div>
        <div class="clear"> </div>
    </div>
    <div class="content">
        <div class="top-grids">
            <div class="wrap">
                <h3 style="color: black;">An IoT Based Smart Parking Solution</h3>
                <h2>TALKING GARAGE</h2>
                <ul>
                    <li><a class="what" href="#">Add Parking Space</a></li>
                    <li><a class="join" href="#">Join As A User</a></li>
                </ul>
            </div>
            <div class="clear"> </div>
        </div>

        <div class="about-us" style="text-align: center;">
            <div class="wrap">
                <div class="about-header">
                    <h3>Find Parking Spaces</h3>
                    <div class="clear"> </div>
                </div>
                <div class="about-info">
                    <p>With our smart parking finder, never get worried for a suitable place for you car. TG will search available spaces near your 1.5 km!</p>
                    <br>
                    <img src="~/images/map-wall.jpg" style="width: 100%">
                </div>
            </div>
            <br><br>
            <div class="wrap">
                <div class="about-header">
                    <h3>Reserve Space</h3>
                    <div class="clear"> </div>
                </div>
                <div class="about-info">
                    <p>Got your suitable place? Don't fight! Book now!</p>
                    <br>
                    <img src="~/images/f2.jpg" style="width: 100%">
                </div>
            </div>
            <br><br>
            <div class="wrap">
                <div class="about-header">
                    <h3>Check In!</h3>
                    <div class="clear"> </div>
                </div>
                <div class="about-info">
                    <p>Reached your spot? Tap your card and get into the garage!</p>
                    <br>
                    <img src="~/images/f3.jpg" style="width: 100%">
                </div>
            </div>
        </div>

        <div class="testmonials">
            <div class="wrap">
                <div class="testmonial-grid">
                    <h3>That's It!!</h3>
                    <p>Parking was never been this easy, Right?</p>
                    <a href="#">Click here to get started</a>
                </div>
            </div>
        </div>

        <div class="bottom-grids">
            <div class="wrap">
                <div class="social-links">
                    <ul>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Google+</a></li>
                        <li><a href="#">Linkedin</a></li>
                    </ul>
                </div>
                <div class="mobile-no">
                    <span>+88 01774 937008</span>
                </div>
                <div class="footer-logo">
                    <a href="#">TALKING GARAGE</a>
                </div>
                <div class="copy-right">
                    <p>Copyright &copy; 2018 Talking Garage. All Rights Reserved</p>
                </div>
                <div class="top-to-page">
                    <a href="#top" class="scroll"> </a>
                    <div class="clear"> </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>